{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ErgoApp Desktop",
  "version": "0.1.0",
  "identifier": "ErgoApp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ergoappdesktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://your-firebase-function-url.com/updates/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyNDE5Njk4NTEwRjU5NzAKUldSd1dROVJtSlpCOHJJcnRQb09tZmlZeDMzN3pSUnB1cTNtYTh6cFJlRTBzc1hENU5MT2Nld1QK"
    }
  }
}
